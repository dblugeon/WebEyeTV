<h1><%=t :list_of %> <%=t :channels %></h1>

<% if @channels.empty? -%>
  <%=t :no_channels -%>
<%  else %>
  <p><%= t(:numbers_channels, :count =>@channels.size )%></p>

  <table>
    <tr>
      <th><%=t :channel_number -%></th>
      <th><%=t :name -%></th>
      <th><%=t :active -%></th>
      <th><%=t :actions -%> </th>
    </tr>
    <% for chan in @channels  -%>
    <tr>
      <td><%= chan.channel_number -%> </td>
      <td><%= chan.name -%></td>
      <td><%= chan.enabled? ? t(:s_yes) : t(:s_no) -%> </td>
      <td>
        <ul>
          <li><%= link_to t(:edit), edit_channel_path(chan.channel_number) -%></li>
        </ul>
      </td>
    </tr>
    <% end -%>    
  </table>
<% end -%>
<br/>